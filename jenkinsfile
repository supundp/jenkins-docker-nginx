pipeline {
    agent any

    environment {
        IMAGE_NAME = "supundhananjaya6076/nginx-server:v1"
        DOCKER_HUB_CREDENTIALS = credentials('DockerID')
        GitID = credentials('GitID')
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/supundp/jenkins-docker-nginx.git'
                withCredentials([usernamePassword(credentialsId: 'GitID', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_PASS')]) {
    sh 'git clone https://$GIT_USER:$GIT_PASS@github.com/supundp/jenkins-docker-nginx.git'
}

            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}")
                }
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'DockerID', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        sh '''
                        echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin 
                        '''
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    // Run new container
                    //sh "docker run -d --name nginx-server -p 8082:80 '${IMAGE_NAME}'"
                    sh "docker push supundhananjaya6076/nginx-server:v1"
                    
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline Finished!"
        }
    }
}
