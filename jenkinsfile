pipeline {
    agent any

    environment {
        IMAGE_NAME = "supundhananjaya6076/nginx-server"
        DOCKER_HUB_CREDENTIALS = credentials('Dcr')
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/supundp/jenkins-docker-nginx.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}")
                }
            }
        }

        stage('Login & Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', '${DOCKER_HUB_CREDENTIALS}') {
                        docker.image("${IMAGE_NAME}").push()
                    }
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Run new container
                    sh "docker run -d --name nginx-server -p 8082:80 '${IMAGE_NAME}'"
                }
            }
        }

        stage('Show Default Page') {
            steps {
                script {
                    sh "echo '----- NGINX DEFAULT PAGE OUTPUT -----'"
                    sh "sleep 3"
                    sh "curl -s http://localhost:8082"
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline Finished!"
        }
    }
}
